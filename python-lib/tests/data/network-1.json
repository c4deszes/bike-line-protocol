{
    "name": "test-network",
    "baudrate": 19200,
    "nodes": {
        "BodyComputer": {
            "address": "0x00",
            "subscribes": [
                "WheelSpeed"
            ],
            "publishes": []
        },
        "RotorSensor": {
            "address": "0x01",
            "subscribes": [],
            "publishes": [
                "WheelSpeed"
            ]
        }
    },
    "requests": {
        "WheelSpeed": {
            "id": "0x1000",
            "size": "5",
            "layout": {
                "FrontSpeed": {
                    "offset": 0,
                    "width": 16,
                    "encoder": "SpeedEncoder"
                },
                "RearSpeed": {
                    "offset": 16,
                    "width": 16,
                    "encoder": "SpeedEncoder"
                },
                "FrontSpeedStatus": {
                    "offset": 32,
                    "width": 2,
                    "encoder": "SpeedValidity"
                },
                "RearSpeedStatus": {
                    "offset": 34,
                    "width": 2,
                    "encoder": "SpeedValidity"
                }
            }
        }
    },
    "encoders": {
        "SpeedEncoder": {
            "type": "formula",
            "offset": 0,
            "scale": 0.3921
        },
        "SpeedValidity": {
            "type": "mapping",
            "mapping": {
                "0": "Invalid",
                "1": "Valid",
                "2": "Unreliable",
                "3": "NA"
            }
        }
    },
    "schedules": {
        "DumpRotorSensorInfoSchedule": {
            "delay": 0.25,
            "entries": [
                {"type": "opstatus", "node": "RotorSensor"},
                {"type": "pwrstatus", "node": "RotorSensor"},
                {"type": "serial", "node": "RotorSensor"},
                {"type": "swversion", "node": "RotorSensor"}
            ]
        },
        "RotorSensorSchedule": {
            "delay": 0.5,
            "entries": [
                {"type": "request", "request": "WheelSpeed"}
            ]
        }
    }
}
